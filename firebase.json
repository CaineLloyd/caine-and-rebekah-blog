{
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint"
    ]
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "redirects": [
      {
        "source": "/",
        "destination": "/home.html",
        "type": 302
      }
    ],
    "rewrites": [
      {
        "source": "/loadData",
        "function": "loadTable"
      }, 
      {
        "source": "/p/**",
        "destination": "index.html"
      }
    ]
  }
}
